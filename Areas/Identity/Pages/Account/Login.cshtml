@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Log in";
}

<div class="login-box login-box-relative">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a asp-area="" asp-controller="Home" asp-action="Index" class="h1"><b>Admin</b>LTE</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>
      @{Model.ReturnUrl ??= "Home";}
      <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <!-- Email -->
        <div class="input-group mb-3">
          <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <!-- Password -->
        <div class="input-group mb-3">
          <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <!-- Remember me? -->
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input asp-for="Input.RememberMe" type="checkbox" id="remember">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
        </div>
      </form>

      <p class="mb-1">
        <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">I forgot my password</a>
      </p>
      <p class="mb-0">
        <a asp-area="Identity" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Register a new membership</a>
      </p>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
<!-- /.login-box -->