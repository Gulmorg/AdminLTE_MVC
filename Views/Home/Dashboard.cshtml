    //  {strokeStyle: "#30B32D", min: 25, max: 35},
    //  {strokeStyle: "#FFDD00", min: 35, max: 40},
    //  {strokeStyle: "#F03E3E", min: 40, max: 50}
    //],
var gaugeOne = new Gauge(document.getElementById('gaugeOne')).setOptions(options);
var gaugeTwo = new Gauge(document.getElementById('gaugeTwo')).setOptions(options);
var gaugeThree = new Gauge(document.getElementById('gaugeThree')).setOptions(options);

gaugeOne.maxValue = 50;
gaugeOne.set(@SnmpManager.GetValue(Model.Target[1]));

gaugeTwo.maxValue = 100;
gaugeTwo.set(@SnmpManager.GetValue(Model.Target[3]));

gaugeThree.maxValue = 50;
gaugeThree.set(@SnmpManager.GetValue(Model.Target[1]));
</script>
